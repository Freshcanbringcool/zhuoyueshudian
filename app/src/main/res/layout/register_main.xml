<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    style="@style/AppThemex"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/ic_register">
    <!--注册页面主-->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:orientation="vertical"
        android:paddingLeft="30dp"
        android:paddingRight="30dp"
        android:paddingTop="100dp">

        <EditText
            android:id="@+id/in_account"
            android:layout_width="300dp"
            android:layout_height="wrap_content"
            android:hint="手机号"
            android:inputType="phone"

            />

        <LinearLayout
            android:layout_width="304dp"
            android:layout_height="wrap_content"
            android:layout_gravity="left"
            android:layout_marginLeft="10dp"
            android:orientation="horizontal">

            <EditText
                android:id="@+id/in_pass"
                android:layout_width="200dp"
                android:layout_height="wrap_content"
                android:layout_gravity="left"
                android:hint="密码"
                android:inputType="textPassword"

                />

            <ToggleButton
                android:id="@+id/TogglePwd"
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:layout_marginRight="8dp"
                android:layout_gravity="center"
                android:background="@drawable/ic_eye_black"
                android:padding="10dp"
                android:textOff=""
                android:textOn="" />

            <TextView
                android:id="@+id/pwd_weak"
                android:layout_width="wrap_content"
                android:layout_height="fill_parent"
                android:layout_marginBottom="10dp"
                android:layout_marginRight="5dp"
                android:layout_marginTop="10dp"
                android:layout_toLeftOf="@+id/pwd_in"
                android:background="@color/huise"
                android:gravity="center"
                android:padding="2.0dp"
                android:text="弱"
                android:textColor="@color/white"
                android:textSize="16dp" />

            <TextView
                android:id="@+id/pwd_in"
                android:layout_width="wrap_content"
                android:layout_height="fill_parent"
                android:layout_marginBottom="10dp"
                android:layout_marginRight="5dp"
                android:layout_marginTop="10dp"
                android:layout_toLeftOf="@+id/pwd_strong"
                android:background="@color/huise"
                android:gravity="center"
                android:padding="2.0dp"
                android:text="中"
                android:textColor="@color/white"
                android:textSize="16dp" />

            <TextView
                android:id="@+id/pwd_strong"
                android:layout_width="wrap_content"
                android:layout_height="fill_parent"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_marginBottom="10dp"
                android:layout_marginRight="6.0dp"
                android:layout_marginTop="10dp"
                android:background="@color/huise"
                android:gravity="center"
                android:padding="2.0dp"
                android:text="强"
                android:textColor="@color/white"
                android:textSize="16dp" />

        </LinearLayout>
        <LinearLayout
            android:layout_width="300dp"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:orientation="horizontal">

            <EditText
                android:id="@+id/in_vcc"
                android:layout_width="200dp"
                android:layout_height="wrap_content"
                android:hint="输入验证码"
                android:inputType="none" />

            <Button
                android:layout_width="100dp"
                android:layout_height="wrap_content"
                android:layout_gravity="right"
                android:background="@drawable/shapebutton"
                android:text="@string/vescc" />
        </LinearLayout>

        <TextView
            android:id="@+id/usertext"
            android:layout_width="300dp"
            android:layout_height="wrap_content"
            android:text="@string/useraggreement"
            android:gravity="left"
            android:paddingLeft="5dp"
            android:textColor="#2F87D2"
            />

        <Button
            android:id="@+id/bt_register"
            android:layout_width="300dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:background="@drawable/shapebutton"
            android:text="注册" />

    </LinearLayout>

</LinearLayout>
